{
  "name": "sm-backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "engines": {
    "node": ">=22.12.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "build": "npm run prisma:generate && bash scripts/build.sh",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "node --max-old-space-size=1024 dist/src/main.js || node --max-old-space-size=1024 dist/main.js",
    "start:dev": "node_modules/.bin/nest start --watch",
    "start:debug": "node_modules/.bin/nest start --debug --watch",
    "start:prod": "node --max-old-space-size=1024 dist/src/main.js || node --max-old-space-size=1024 dist/main.js",
    "start:deploy": "npm run prisma:generate && npm run prisma:migrate && bash scripts/verify-build.sh && npm run start:prod",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prisma:use-env": "node prisma/use-env.js",
    "prisma:migrate": "npm run prisma:use-env && prisma migrate deploy",
    "prisma:studio": "npm run prisma:use-env && prisma studio",
    "prisma:generate": "npm run prisma:use-env && prisma generate",
    "prisma:seed": "npm run prisma:use-env && ts-node prisma/seed-comprehensive.ts",
    "prisma:reset": "bash scripts/reset-db.sh",
    "postinstall": "npm run prisma:generate"
  },
  "dependencies": {
    "2": "^3.0.0",
    "@aws-sdk/client-s3": "^3.879.0",
    "@aws-sdk/s3-request-presigner": "^3.879.0",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.1.6",
    "@nestjs/platform-socket.io": "^11.1.10",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/websockets": "^11.1.10",
    "@nestjs/cli": "^11.0.0",
    "@pinecone-database/pinecone": "^6.1.2",
    "@prisma/adapter-pg": "7.2.0",
    "@prisma/client": "7.2.0",
    "@types/fluent-ffmpeg": "^2.1.28",
    "@types/multer": "^2.0.0",
    "@types/passport": "^1.0.17",
    "@types/passport-jwt": "^4.0.1",
    "argon": "^2.0.21",
    "argon2": "^0.43.0",
    "bcrypt": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "cloudinary": "^2.6.1",
    "colors": "^1.4.0",
    "fluent-ffmpeg": "^2.1.3",
    "joi": "^17.13.3",
    "mammoth": "^1.10.0",
    "multer": "^2.0.2",
    "multer-s3": "^3.0.1",
    "nodemailer": "^7.0.3",
    "openai": "^5.20.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pdf-parse": "^1.1.1",
    "pg": "^8.17.1",
    "pinecone": "^0.1.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "socket.io": "^4.8.1",
    "swagger-ui-express": "^5.0.1",
    "xlsx": "^0.18.5"
