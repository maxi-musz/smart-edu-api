# Smart Edu Backend Environment Configuration
# Copy this file to .env and update the values

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
NODE_ENV=development
PORT=1000
APP_NAME=Smart Edu Hub

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# For development (local database)
DATABASE_URL=postgresql://postgres:123@localhost:5434/smart-edu-db

# For production (use DATABASE_URL_PRODUCTION)
DATABASE_URL_PRODUCTION=postgresql://username:password@host:5432/database_name

# PostgreSQL Configuration (for Docker Compose)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-password
POSTGRES_DB=smart_edu_prod

# ===========================================
# JWT CONFIGURATION
# ===========================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# ===========================================
# CORS CONFIGURATION
# ===========================================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:5173
FRONTEND_URL=http://localhost:3000

# ===========================================
# EMAIL CONFIGURATION
# ===========================================
# Email Provider: 'gmail' (default), 'resend', or 'sendgrid'
EMAIL_PROVIDER=gmail

# Gmail SMTP Configuration (default provider)
EMAIL_USER=your-gmail-address@gmail.com
EMAIL_PASSWORD=your-gmail-app-password
GOOGLE_SMTP_HOST=smtp.gmail.com
GOOGLE_SMTP_PORT=587

# Resend Configuration (if EMAIL_PROVIDER=resend)
# RESEND_API_KEY=re_your_resend_api_key
# RESEND_FROM_EMAIL=noreply@yourdomain.com
# RESEND_FROM_NAME=Smart Edu Hub

# SendGrid Configuration (if EMAIL_PROVIDER=sendgrid)
# SENDGRID_API_KEY=SG.your_sendgrid_api_key
# SENDGRID_FROM_EMAIL=noreply@yourdomain.com
# SENDGRID_FROM_NAME=Smart Edu Hub

# Admin Email (for notifications)
BTECH_ADMIN_EMAIL=admin@smartedu.com

# ===========================================
# STORAGE PROVIDER CONFIGURATION
# ===========================================
# Choose storage provider: 's3' or 'cloudinary'
STORAGE_PROVIDER=s3

# ===========================================
# AWS S3 CONFIGURATION (required if STORAGE_PROVIDER=s3)
# ===========================================
# For file uploads (videos, documents, etc.)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=smart-edu-dev-bucket
AWS_S3_BUCKET_DEV=smart-edu-dev-bucket
AWS_S3_BUCKET_STAGING=smart-edu-staging-bucket
AWS_S3_BUCKET_PROD=smart-edu-prod-bucket

# ===========================================
# CLOUDINARY CONFIGURATION
# ===========================================
# For image processing and optimization
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# ===========================================
# OPENAI CONFIGURATION
# ===========================================
# For AI chat features and document processing
OPENAI_API_KEY=your-openai-api-key

# ===========================================
# PINECONE CONFIGURATION
# ===========================================
# For vector database (AI chat with documents)
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=us-east-1-aws
# Note: Index name is automatically set based on NODE_ENV
# Development will use: sm-ai-chat-chunks-development

# ===========================================
# REDIS CONFIGURATION
# ===========================================
# For caching and session management
REDIS_URL=redis://localhost:6379

# ===========================================
# PRODUCTION CONFIGURATION
# ===========================================
# App Port (for production)
APP_PORT=1000

# SSL Configuration (for production with HTTPS)
# SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
# SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# ===========================================
# MONITORING & LOGGING
# ===========================================
# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Sentry DSN for error tracking (optional)
# SENTRY_DSN=your-sentry-dsn

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
# Rate limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# Session configuration
SESSION_SECRET=your-session-secret-key

# ===========================================
# EXTERNAL SERVICES
# ===========================================
# Payment Gateway (if applicable)
# PAYSTACK_SECRET_KEY=your-paystack-secret-key
# PAYSTACK_PUBLIC_KEY=your-paystack-public-key

# Push Notifications (if applicable)
# FCM_SERVER_KEY=your-fcm-server-key
# APNS_KEY_ID=your-apns-key-id
# APNS_TEAM_ID=your-apns-team-id
